<%- include('partials/header') %>

<div class="container mt-5">
  <h1 class="mb-4">Panel de Administración</h1>

  <div class="text-end mb-4">
    <a href="/" class="btn btn-secondary">
      <i class="fa-solid fa-house"></i> Volver al Inicio
    </a>
  </div>

  <h2 class="mb-4">Tienes <%= products.length %> productos registrados</h2>

  <form action="/admin/add" method="POST" class="mb-5">
    <div class="mb-3">
      <label>Nombre:</label>
      <input type="text" name="name" class="form-control" required>
    </div>
    <div class="mb-3">
      <label>Descripción:</label>
      <textarea name="description" class="form-control" required></textarea>
    </div>
    <div class="mb-3">
      <label>Precio:</label>
      <input type="number" name="price" step="0.01" class="form-control" required>
    </div>
    <div class="mb-3">
      <label>Categoría:</label>
      <input type="text" name="category" class="form-control" required>
    </div>
    <div class="mb-3">
      <label>Imagen URL:</label>
      <input type="url" name="image" class="form-control" required>
    </div>
    <button type="submit" class="btn btn-success">Guardar Producto</button>
  </form>

  <h2 class="mb-4">Productos existentes</h2>

  <div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Nombre</th>
          <th>Descripción</th>
          <th>Precio</th>
          <th>Categoría</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% products.forEach(product => { %>
          <tr>
            <td><%= product.name %></td>
            <td><%= product.description %></td>
            <td>$<%= product.price %></td>
            <td><%= product.category %></td>
            <td>
              <a href="/admin/edit/<%= product.id %>" class="btn btn-warning btn-sm">Editar</a>
              <a href="/admin/delete/<%= product.id %>" class="btn btn-danger btn-sm"
                 onclick="return confirm('¿Estás segura de eliminar este producto?')">
                 Eliminar
              </a>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
</div>

<%- include('partials/footer') %>
